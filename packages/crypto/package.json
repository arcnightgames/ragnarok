{
  "name": "@arcnight/crypto",
  "description": "Arcnight crypto library",
  "license": "MIT",
  "author": "Arcnight Inc.",
  "version": "0.1.0",
  "type": "module",
  "main": "dist/crypto.js",
  "exports": {
    ".": {
      "import": "./dist/crypto.js"
    }
  },
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "tsc && vite build",
    "lint": "eslint lib",
