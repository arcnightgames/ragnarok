{
  "name": "@arcnight/components",
  "version": "0.1.0",
  "description": "Arcnight Design system",
  "license": "AGPL-3.0",
  "author": "Arcnight Inc.",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/components.js"
    }
  },
  "main": "dist/components.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "tsc && vite build",
    "build:storybook": "storybook build",
    "coverage": "vitest run --coverage",
    "lint": "eslint lib",
    "lint:fix": "eslint lib --fix",
    "pretty": "prettier --check $(find . -type d \\( -name 'node_modules' -o -name 'dist' \\) -prune -o \\( -type f -name '*.js' -o -name '*.ts' -o -name '*.tsx' \\) -print)",
    "pretty:fix": "prettier --write $(find . -type d \\( -name 'node_modules' -o -name 'dist' \\) -prune -o \\( -type f -name '*.js' -o -name '*.ts' -o -name '*.tsx' \\) -print)",
    "storybook": "storybook dev --no-open -p 6006",
    "test": "vitest run --passWithNoTests",
    "test:ui": "vitest --ui --coverage.enabled=true",
    "test:update": "vitest run --update"
  },
  "dependencies": {
    "@arcnight/shared": "workspace:packages/shared",
    "@arcnight/utils": "workspace:packages/utils",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router": "^6.22.3",
    "react-router-dom": "^6.22.3",
    "ttag": "^1.8.6"
  },
  "devDependencies": {
    "@arcnight/eslint-config-arcnight": "workspace:packages/eslint-config-arcnight",
    "@arcnight/react-polymorphic-types": "workspace:packages/react-polymorphic-types",
    "@storybook/addon-docs": "^8.0.5",
    "@storybook/addon-essentials": "^8.0.5",
    "@storybook/addon-interactions": "^8.0.5",
    "@storybook/addon-links": "^8.0.5",
    "@storybook/addon-onboarding": "^8.0.5",
    "@storybook/blocks": "^8.0.5",
    "@storybook/manager-api": "^8.0.5",
    "@storybook/react": "^8.0.5",
    "@storybook/react-vite": "^8.0.5",
    "@storybook/testing-library": "^0.2.2",
    "@storybook/theming": "^8.0.5",
    "@testing-library/dom": "^9.3.4",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.2",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^20.12.3",
    "@types/react": "^18.2.74",
    "@types/react-dom": "^18.2.23",
    "@types/text-encoding-utf-8": "^1.0.5",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^1.4.0",
    "@vitest/ui": "^1.6.0",
    "eslint": "^8.57.0",
    "jsdom": "^24.0.0",
    "prettier": "^3.2.5",
    "sass": "^1.72.0",
    "storybook": "^8.0.5",
    "text-encoding-utf-8": "^1.0.2",
    "typescript": "^5.4.3",
    "vite": "^5.2.8",
    "vite-plugin-dts": "^3.8.1",
    "vite-plugin-lib-inject-css": "^2.0.1",
    "vitest": "^1.4.0"
  }
}
